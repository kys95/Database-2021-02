<h1>{{ title }}</h1>

<table>
    <tr>
        <td>Dname</td>
        <td>Dnumber</td>
        <td>Mgr_ssn</td>
        <td>Mgr_start_date</td>
    </tr>
    {{#each dept_res}}  <!-- dept_res 이름 자유롭게 설정가능 -->
        <form method="post">
            <tr>
                <!-- input tag를 사용하여 입력 가능한 형태로 변경함(다른 방법도 있음) -->
                <td><input type="text" name="dname" placeholder={{Dname}}></td>     <!-- placeholder: 브라우저상의 텍스트 필드안에 미리 보여지는 값 -->
                <td>{{Dnumber}}</td>
                <td>{{Mgr_ssn}}</td>
                <td>{{Mgr_start_date}}</td>
                <!-- formaction 속성을 활용하여 입력한 값을 넘겨줌) -->
                <td><input type="submit" value="수정" formaction="/update/department"></td>
            </tr>
        </from>
    {{/each}}
</table>
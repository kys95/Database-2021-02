<h1>{{ title }}</h1>

<table>
    <tr>                     {{!-- 행 --}}
        <td>Fname</td>       {{!-- 열 --}}
        <td>Minit</td>
        <td>Lname</td>
        <td>Ssn</td>
        <td>Bdate</td>
        <td>Address</td>
        <td>Sex</td>
        <td>Salary</td>
        <td>Super_ssn</td>
        <td>Dno</td>
    </tr>
    {{#each emp_res}}       {{!-- each 시작, employee 반복 --}}
        <form method="post">   {{!-- action = '/update/employee'> --}}
            <tr> 
                <!-- input tag를 사용하여 입력 가능한 형태로 변경함(다른 방법도 있음) -->
                <td>{{Fname}}</td>
                <td>{{Minit}}</td>
                <td>{{Lname}}</td>
                <td>{{Ssn}}</td>
                <td>{{Bdate}}</td>
                <td>{{Address}}</td>
                <td>{{Sex}}</td>
                <td><input type="text" name="salary" placeholder={{Salary}}></td>     <!-- placeholder: 브라우저상의 텍스트 필드안에 미리 보여지는 값 -->
                <td>{{Super_ssn}}</td>
                <td>{{Dno}}</td>
                <!-- formaction 속성을 활용하여 입력한 값을 넘겨줌) -->
                <td><input type="submit" value="수정" formaction="/update/employee"></td>
            </tr>
        </form>
    {{/each}}                {{!-- each 끝, 데이터가 있을때마다 행 추가해서 값을 입력 --}}
</table>

